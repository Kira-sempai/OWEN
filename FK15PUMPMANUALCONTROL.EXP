
(* @NESTEDCOMMENTS := 'Yes' *)
(* @PATH := '\/K15' *)
(* @OBJECTFLAGS := '0, 8' *)
(* @SYMFILEFLAGS := '2048' *)
FUNCTION fK15PumpManualControl : BOOL
VAR_INPUT
	PumpID : USINT;
	TurnOn : BOOL;
	TurnOff : BOOL;
	State : BOOL;
	EmergencyStop : BOOL;
END_VAR
VAR
END_VAR
(* @END_DECLARATION := '0' *)
IF TurnOn OR State THEN (*Нажата кнопка "Пуск насоса" или Работает насос?*)
	IF TurnOff THEN (*Нажата кнопка "Стоп насоса"?*)
		fTurnOffK15Pump(PumpID);
		RETURN;
	ELSE
		IF EmergencyStop THEN (*Нажат аварийный стоп насоса?*)
			fTurnOffK15Pump(PumpID);
			RETURN;
		ELSE
			fTurnOnK15Pump(PumpID);
			RETURN;
		END_IF;
	END_IF;
ELSE
	RETURN;
END_IF;
END_FUNCTION
